<style>
  /* Base Reset & Typography */
  body {
    margin: 0;
    font-family: 'Segoe UI', sans-serif;
    background: #f9f9f9;
    transition: background 0.3s ease;
  }

  .backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: none;
    z-index: 5;
    transition: opacity 0.3s ease;
  }

  .main-header {
    background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
    color: white;
    padding: 1rem 2rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    position: sticky;
    top: 0;
    z-index: 10;
    transition: background 0.3s ease;
  }

  .main-header__nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .main-header__item-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1.2rem;
  }

  .main-header__item a,
  .main-header__item button {
    text-decoration: none;
    color: white;
    font-weight: 500;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: background 0.3s ease, transform 0.2s ease;
  }

  .main-header__item a:hover,
  .main-header__item button:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.05);
  }

  .main-header__item .active {
    background-color: #2a5298;
    color: #1e3c72;
    font-weight: bold;
  }

  #side-menu-toggle {
    display: none;
    background: #2a5298;
    color: #1e3c72;
    border: none;
    border-radius: 6px;
    padding: 0.5rem 1rem;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.2s ease;
  }

  #side-menu-toggle:hover {
    background: #1e3c72;
    transform: scale(1.05);
  }

  /* Mobile Nav */
  .mobile-nav {
    display: none;
    background: #2a5298;
    padding: 1rem;
    z-index: 8;
    transition: transform 0.3s ease;
    transform: translateX(-100%);
  }

  .mobile-nav.open {
    display: block;
    transform: translateX(0);
  }

  .mobile-nav__item-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .mobile-nav__item {
    margin: 0.5rem 0;
  }

  .mobile-nav__item a,
  .mobile-nav__item button {
    color: white;
    text-decoration: none;
    font-weight: 500;
    display: block;
    padding: 0.6rem;
    border-radius: 6px;
    transition: background 0.3s ease, transform 0.2s ease;
    width: 100%;
    text-align: left;
    background: transparent;
    border: none;
  }

  .mobile-nav__item a:hover,
  .mobile-nav__item button:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: scale(1.05);
  }

  .mobile-nav__item .active {
    background-color: #2a5298;
    color: #2a5298;
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .main-header__item-list {
      display: none;
    }

    #side-menu-toggle {
      display: block;
    }

    .mobile-nav {
      display: block;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleBtn = document.getElementById('side-menu-toggle');
    const backdrop = document.querySelector('.backdrop');
    const mobileNav = document.querySelector('.mobile-nav');

    toggleBtn.addEventListener('click', () => {
      mobileNav.classList.toggle('open');
      backdrop.style.display = mobileNav.classList.contains('open') ? 'block' : 'none';
      backdrop.style.opacity = mobileNav.classList.contains('open') ? '1' : '0';
    });

    backdrop.addEventListener('click', () => {
      mobileNav.classList.remove('open');
      backdrop.style.display = 'none';
      backdrop.style.opacity = '0';
    });
  });
</script>

<div class="backdrop"></div>

<header class="main-header">
  <button id="side-menu-toggle">â˜° Menu</button>
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item"><a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a></li>
      <li class="main-header__item"><a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a></li>

      <% if(isAuthenticated) { %>
        <li class="main-header__item"><a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a></li>
        <li class="main-header__item"><a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a></li>
        <li class="main-header__item"><a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product</a></li>
        <li class="main-header__item"><a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin Products</a></li>
      <% } %>
    </ul>

    <ul class="main-header__item-list">
      <% if(!isAuthenticated) { %>
        <li class="main-header__item"><a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a></li>
        <li class="main-header__item"><a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a></li>
      <% } else { %>
        <li class="main-header__item">
          <form action="/logout" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit">Logout</button>
          </form>
        </li>
      <% } %>
    </ul>
  </nav>
</header>

<nav class="mobile-nav">
